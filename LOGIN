    <section id="login-content">
        <div class="selection">
            <div id="login-btn">Login</div>|
            <div id="signin-btn">SignIn</div>
        </div>
        <div id="login" class="hidden">
            <input type="text" placeholder="Username" class="login-input">
            <input type="password" placeholder="Password" class="login-input">
            <button id="login_btn" class="login-submit-btn">Login</button>
        </div>
        <div id="signin" class="hidden">
            <input type="text" placeholder="Name">
            <input type="text" placeholder="Username">
            <input type="text" placeholder="Password">
            <input type="text" placeholder="Confirm Password">
            <button id="submit_btn">Submit</button>
        </div>
    </section>

    <script>
        document.addEventListener("DOMContentLoaded",() => {
            const loginBtn = document.getElementById("login-btn");
            const signinBtn = document.getElementById("signin-btn");
            const loginContent = document.getElementById("login")
            const signinContent = document.getElementById("signin")
            loginBtn.addEventListener('click',() => {
                loginBtn.style.backgroundColor = "red"
                signinBtn.style.backgroundColor = ""

                signinContent.classList.add("hidden")
                loginContent.classList.remove("hidden")
            })
            signinBtn.addEventListener('click',() => {
                signinBtn.style.backgroundColor = "red"
                loginBtn.style.backgroundColor = ""

                loginContent.classList.add("hidden")
                signinContent.classList.remove("hidden")
            })
        })
    </script>
